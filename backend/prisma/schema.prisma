generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([latitude, longitude])
  @@index([username])
}

model Restaurant {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String?
  tags        String[]
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  menu        Menu[]

  @@index([latitude, longitude])
  @@index([name])
}

model Menu {
  id           Int        @id @default(autoincrement())
  item_name    String
  price        Float
  imageUrl     String?
  description  String?
  isVeg        Boolean    @default(true)
  restaurantId Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([restaurantId])
}